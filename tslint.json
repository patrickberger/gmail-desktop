{
  "extends": "tslint:recommended",
  "rules": {
    "curly": [true, "ignore-same-line"],
    "indent": [true, "spaces"],
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "quotemark": {
        "options": ["single", "avoid-escape"]
    },
    "semicolon": [true, "always"]
  }
}
